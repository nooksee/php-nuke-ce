<?xml version="1.0"?>
<ruleset name="nukeCE">
  <description>PHP-Nuke CE coding standard (PSR-12 baseline with pragmatic excludes).</description>

  <rule ref="PSR12"/>

  <!-- Avoid reformatting third-party/legacy vendor code -->
  <exclude-pattern>forums/*</exclude-pattern>
  <exclude-pattern>modules/forums/*</exclude-pattern>
  <exclude-pattern>includes/phpbb2x/*</exclude-pattern>
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>install/legacy/*</exclude-pattern>

  <!-- Allow classic Nuke-style underscores in some legacy files -->
  <rule ref="PSR1.Methods.CamelCapsMethodName">
    <exclude-pattern>*/legacy/*</exclude-pattern>
  </rule>
</ruleset>
