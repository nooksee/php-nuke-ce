# nukeCE security hardening: deny PHP execution in this directory
<FilesMatch "\.php$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Deny from all
  </IfModule>
</FilesMatch>

# If PHP is running as Apache module, attempt to disable engine
<IfModule mod_php.c>
  php_flag engine off
</IfModule>
