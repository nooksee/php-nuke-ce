# PHP-Nuke CE (nukeCE)
# Installer must be inaccessible after setup.
# When install/LOCK exists, deny all HTTP access to /install.

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteCond %{DOCUMENT_ROOT}/install/LOCK -f
  RewriteRule ^ - [F,L]
</IfModule>

# Fallback: if mod_rewrite is unavailable, admins should delete /install or keep it outside docroot.
